{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noImplicitAny": true,
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"typeRoots": ["types/"]
	},
	"include": ["src/", "types/"],
	"exclude": ["node_modules", "dist"]
}
